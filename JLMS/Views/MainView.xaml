             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100">
    <UserControl.Resources>
        <ResourceDictionary Source="../MainWindowResources.xaml" />
    </UserControl.Resources>
    
    <Grid>
       
        <dxlc:LayoutControl x:Name="layoutControl" >
            
            <dxlc:LayoutGroup Width="300" View="GroupBox" Header="Cases" dxlc:LayoutControl.AllowHorizontalSizing="True" Padding="-8">
                <dxnb:NavBarControl Name="navBarControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1">

                    <dxnb:NavBarControl.Groups>
                        <local:NavBarGroupEx Header="CME" CurrentItem="{Binding SelectedCase, Mode=TwoWay}" ItemsSource="{Binding CaseFilesCME}" ImageSource="../Images/Icons/Group.png" >
                            <local:NavBarGroupEx.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source=  "../Images/Icons/Item.png" />
                                        <TextBlock Text="{Binding Path = Name}" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </local:NavBarGroupEx.ItemTemplate>
                        </local:NavBarGroupEx>
                        <local:NavBarGroupEx Header="DA" CurrentItem="{Binding SelectedCase, Mode=TwoWay}" ItemsSource="{Binding CaseFilesDA}"  ImageSource="../Images/Icons/Group.png">
                            <dxnb:NavBarGroup.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source=  "../Images/Icons/Item.png" />
                                        <TextBlock Text="{Binding Path = Name}" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </dxnb:NavBarGroup.ItemTemplate>
                        </local:NavBarGroupEx>
                    </dxnb:NavBarControl.Groups>
                   
                    <dxnb:NavBarControl.View>
                        <dxnb:NavigationPaneView IsExpandButtonVisible="False"/>
                    </dxnb:NavBarControl.View>
                </dxnb:NavBarControl>
            </dxlc:LayoutGroup>

           
